@model CallCentreFollowUps.Models.Supervisor

@{
    ViewBag.Title = "Edit Supervisor";
}
@{
    Layout = "~/Views/Shared/_LayoutPayroll.cshtml"; <!-- Reference the layout file here -->
}

<h2>Edit Supervisor</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <!-- First Row: Two fields in one row -->
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.Name)
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.Region)
                @Html.DropDownListFor(model => model.Region, (SelectList)ViewBag.RegionList, "-- Select Region --", new { @class = "form-control" })
            </div>
        </div>
    </div>

    <!-- Second Row: Two fields in one row -->
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.IsActive)
                @Html.DropDownListFor(model => model.IsActive, new SelectList(new[] {
                    new { Value = true, Text = "Active" },
                    new { Value = false, Text = "Inactive" }
                }, "Value", "Text"), "Please select", new { @class = "form-control" })
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.PCNumber)
                @Html.TextBoxFor(model => model.PCNumber, new { @class = "form-control" })
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Submit Button -->
        <div class="form-group col-md-6">
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>

        <!-- Back to List Link -->
        <div class="form-group col-md-6">
            @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-secondary" })
        </div>
     </div>
        }
