@model CallCentreFollowUps.Models.Project

@{
    ViewBag.Title = "Edit Project";
}
@{
    Layout = "~/Views/Shared/_LayoutPayroll.cshtml"; <!-- Reference the layout file here -->
}

<h2>Edit Project</h2>

@using (Html.BeginForm("Edit", "Project", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.ProjectID)

    <!-- First Row: Two fields in one row -->
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.ProjectName, "Project Name")
                @Html.TextBoxFor(m => m.ProjectName, new { @class = "form-control" })
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.ProjectNumber,"Project Number")
                @Html.TextBoxFor(m => m.ProjectNumber, new { @class = "form-control" })
            </div>
        </div>
    </div>

    <!-- Second Row: Two fields in one row -->
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(m => m.PayRate,"Pay Rate")
                @Html.TextBoxFor(m => m.PayRate, new { @class = "form-control" })
            </div>
        </div>

        <!-- Empty column for layout, to keep the balance of the row -->
        <div class="col-md-6">
            <!-- Empty div, can be used for another field or left empty if no second field needed -->
        </div>
    </div>

    <div class="row">
        <!-- Submit Button -->
        <div class="form-group col-md-6">
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>

        <!-- Back to List Link -->
        <div class="form-group col-md-6">
            @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-secondary" })
        </div>
      </div>
        }
