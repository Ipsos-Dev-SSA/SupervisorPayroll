@model CallCentreFollowUps.Models.Project

@{
    ViewBag.Title = "Delete Project";
    Layout = "~/Views/Shared/_LayoutPayroll.cshtml";
}

<h2>Are you sure you want to delete this project?</h2>

<div>
    <h4>@Model.ProjectName (@Model.ProjectNumber)</h4>
    <dl class="dl-horizontal">
        <dt>Pay Rate</dt>
        <dd>@Model.PayRate</dd>

        <dt>Supervision Fee</dt>
        <dd>@Model.SupervisionFee</dd>

        <dt>Is Active</dt>
        <dd>@Model.IsActive</dd>
    </dl>
</div>

@using (Html.BeginForm("Delete", "Project", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ProjectID)
    <input type="submit" value="Delete" class="btn btn-danger" />
    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
}
